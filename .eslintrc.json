{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": ["error", { "argsIgnorePattern": "_" }],
      "no-useless-constructor": "off",
      "class-methods-use-this": "off",
      "global-require": "off",
      "max-classes-per-file": "off"
    }
}
